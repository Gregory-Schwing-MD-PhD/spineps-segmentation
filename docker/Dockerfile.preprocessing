FROM python:3.11-slim

LABEL maintainer="go2432@wayne.edu"
LABEL description="Preprocessing container for DICOM/NIfTI handling"
LABEL version="1.1"

WORKDIR /workspace

# 1. Base System Dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    git \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    dcmtk \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --upgrade pip setuptools wheel

# 2. Heavy Python Dependencies (Cached)
RUN pip install --no-cache-dir \
    nibabel==5.1.0 \
    SimpleITK==2.3.1 \
    pydicom==2.4.4 \
    dicom2nifti==2.4.10 \
    dicom-numpy==0.6.3

RUN pip install --no-cache-dir \
    numpy==1.24.3 \
    pandas==2.1.4 \
    scipy==1.11.4 \
    h5py==3.10.0 \
    pillow==10.1.0

RUN pip install --no-cache-dir \
    opencv-python-headless==4.8.1.78 \
    scikit-image==0.22.0

RUN pip install --no-cache-dir \
    tqdm==4.66.1 \
    pyyaml==6.0.1 \
    kaggle==1.8.4

# 3. ðŸ©¹ HOTFIX: Add Unzip (Added at end to maximize caching)
# This creates a new layer but preserves all previous cached layers
RUN apt-get update && apt-get install -y --no-install-recommends \
    unzip \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /data /results

ENV PYTHONUNBUFFERED=1

CMD ["/bin/bash"]
